.header image {
  display: block;
  width: 150rpx;
  height: 150rpx;
  opacity: 1;
  border-radius: 50%;
  margin-top: 40rpx;
}

.header view {
  width: 264rpx;
  height: 48rpx;
  margin-top: 20rpx;
  font-size: 36rpx;
  color: rgba(74, 74, 74, 1);
  line-height: 48rpx;
  text-align: center;
  font-weight: 600;
  overflow: hidden;
    text-overflow:ellipsis;
    white-space:nowrap;
}
#bianji{
  position: absolute;
  width: 44rpx;
  height: 44rpx;
  right: 30rpx;
  border-radius: 0;
}
/* 我的订单 */
.order{
  width: 750rpx;
  height: 300rpx;
  opacity: 1;
  background: rgba(255,255,255,1);
  margin-top: 164rpx;
}
.mine{
  height: 108rpx;
  line-height: 108rpx;
  font-size: 32rpx;
  font-family: PingFang;
  color: rgba(51,51,51,1);
  letter-spacing: 0px;
  border-bottom: 1rpx solid rgba(238,238,238,1);
}
.mine text{
  margin:0 30rpx 0 30rpx;
}
.mine view{
  float:right;
  margin:0 30rpx;
}
.mine view text{
  color:rgba(153,153,153,1);
  font-size:28rpx;
  vertical-align: middle;
  margin:0 10rpx;
}
.mine image{
  width: 30rpx;
  height: 30rpx;
  vertical-align: middle;
}
.order_state{
  height: 150rpx;
  display: flex;
  align-items: center;
}
.state_item{
  width: 74rpx;
  height: 94rpx;
  margin-top: 40rpx;
  margin-left: 64rpx; 
  text-align: center;
  /* margin-top: 50rpx; */
  position: relative;
}
.state_item image{
  width: 56rpx;
  height:56rpx; 
}
.state_item view{
  width: 74rpx;
  height: 34rpx;
  font-size: 24rpx;
  line-height: 34rpx;
  color: #666666;
}
.state_item text{
  position: absolute;
  right: -16rpx;
  top: -16rpx;
  background: #f00;
  border-radius: 50%;
  font-size: 24rpx;
  line-height: 30rpx;
  width: 30rpx;
  height: 30rpx;
  color: #fff;
}
/* 我的服务 */
.my_server{
  width: 750rpx;
  height: 494rpx;
  opacity: 1;
  background: rgba(255,255,255,1);
  margin-top: 30rpx;
}
.server_item_box{
  height: 344rpx;
}
.server_item{
  width: 120rpx;
  height: 116rpx;
  float: left;
  text-align: center;
  margin-left: 60rpx;
  margin-top: 28rpx;
}
.server_item image{
  width: 68rpx;
  height: 68rpx;
}
.server_item view{
  width: 120rpx;
  height: 34rpx;
  opacity: 1;
  font-size: 24rpx;
  font-family: PingFang;
  color: rgba(102,102,102,1);
  line-height: 34rpx;
  letter-spacing: 0px;
  text-align: center;
}


.server_bts{
  background: transparent;
  line-height: 40rpx;
  padding: 0;
}
.server_bts::after {
  border: none;
}




/* 飞鸟协议 */
.xieyi{
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  z-index: 100;
  position: fixed;
}
.black{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  background: black;
  opacity: 0.6;
}
.xieyi_content{
  width: 674rpx;
  height: 818rpx;
  opacity: 1;
  background: rgba(255,255,255,1);
  position: absolute;
  top: 117rpx;
  left: 40rpx;
  border-radius: 12rpx;
}
.xieyi_content view{
  opacity: 1;
  font-size: 36rpx;
  font-family: PingFangSC;
  color: rgba(74,74,74,1);
  line-height: 170rpx;
  text-align: center;
  width: 674rpx;  
  font-weight: bold;
}
.xieyi_content text{
  display: inline-block;
    width: 588rpx;
    height: 590rpx;
    opacity: 1;
    font-size: 26rpx;
    font-family: PingFang;
    color: rgba(102,102,102,1);
    line-height: 46rpx;
    margin-left: 42rpx;
    overflow: auto;
}
.xieyi_content text::-webkit-scrollbar {
  width: 6rpx;
  background-color: #f5f5f5;
}
.xieyi image{
  width: 98rpx;
  height: 98rpx;
  position: absolute;
  left: 326rpx;
  bottom: 30rpx;
}