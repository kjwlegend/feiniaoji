/* pages/my/my.wxss */
page{
  background: rgba(248,248,248,1);
}
.header_back {
  width: 750rpx;
  height: 196rpx;
  opacity: 1;
  background: rgba(41, 135, 246, 1);
  padding-top: 30rpx;
}

.header {
  width: 690rpx;
  height: 308rpx;
  opacity: 1;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 4px 6px 1px rgba(217, 225, 231, 0.66);
  margin: 0 auto;
  border-radius: 8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
