/* pages/find/find.wxss */
page{
  background: rgba(248,248,248,1);
}
.header{
  width: 750rpx;
  height: 436rpx;
  position: relative;
}
.header .header_bei{
  width: 100%;
  height: 436rpx;
  position: absolute;
  top: 0;
  left: 0;
  background: linear-gradient(rgba(255,255,255,0) 45%, rgba(255,255,255,1));
}
.header image{  
  width: 750rpx;
  height: 436rpx;
}
.header_content{
  width: 690rpx;
  height: 500rpx;
  opacity: 1;
  background: rgba(255,255,255,1);
  box-shadow: 0px 4px 6px 1px rgba(217,225,231,0.66);
  position: absolute;
  top: 300rpx;
  left: 30rpx;
  border-radius:8rpx;
}
.place{
  height: 128rpx;
  width: 630rpx;
  border-bottom: 2rpx solid rgba(238,238,238,1);
  display: flex;
  align-items: center;
  margin-left: 30rpx;
  box-sizing: border-box;
  padding-top: 30rpx;
}
.place view{
  width: 45%;
  height: 60rpx;
  line-height: 60rpx;
  display: inline-block;
  font-size: 34rpx;
  font-weight: 700;
  color:#d2d2d2;
  white-space:nowrap;
       overflow:hidden;
       text-overflow:ellipsis;
}
.place image{
  width: 48rpx;
  height: 48rpx;
  margin:0 30rpx;
}
.input_p{
  color:rgba(210,210,210,1);

}
button{width: 630rpx;height: 96rpx;line-height: 96rpx; color: white;background: rgba(41,135,246,1);margin: 58rpx auto 0;border-radius: 8rpx;}
button::after{ border: none; }
/* 热门行程 */
.hot_trip_content{
  width: 690rpx;
  height: 686rpx;
  margin-left: 30rpx;
  margin-top: 394rpx;
  border-radius: 8rpx;
  position: relative;
  opacity: 1;
  background: rgba(255,255,255,1);
  box-shadow: 0px 4px 6px 1px rgba(217,225,231,0.66);
}
.icon{
  width: 8rpx;
  height: 110rpx;
  opacity: 1;
  background: rgba(41, 135, 246, 1);
  position: absolute;
  left: 0;
  top: 0;
}
.hot_trip{
  width: 650rpx;
  height: 110rpx;
  padding-left: 40rpx;
  line-height: 110rpx;
  font-size: 34rpx;
  font-family: PingFang;
  color: rgba(74,74,74,1);
  letter-spacing: 0px;
  border-bottom: 1px solid rgba(238,238,238,1);
  margin-bottom: 20rpx;
}

.sitys_all{
  width: 100%;
  margin: 0 auto;
  text-align: center;
}
.citys{
  width: 304rpx;
  height: 234rpx;
  opacity: 1;
  display: inline-block;
  position: relative;
  margin:8rpx;
  color: white;
  flex-direction: column;
  align-items: center;  
}
.citys image{
  width: 304rpx;
  height: 234rpx;
}
.citys_zhe{
  font-size: 38rpx;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: linear-gradient(rgba(0,0,0,0.2), rgba(0,0,0,0));
  text-align: center;
  font-weight: 800;
}
.cityName{
  margin-top: 46rpx;
}

/* 为你推荐 */
.recommed_content{
  width: 690rpx;
  background: rgba(255,255,255,1);
  box-shadow: 0px 4px 6px 1px rgba(217,225,231,0.66);
  margin: 40rpx auto 90rpx;
  position: relative;
  border-radius: 8rpx;
  padding-bottom: 40rpx;
}
.recommed{
  width: 630rpx;
  height: 114rpx;
  line-height: 114rpx;
  margin-left: 30rpx;
  font-size: 34rpx;
  font-family: PingFang;
  color: rgba(74,74,74,1);
  letter-spacing: 0px;
  border-bottom: 1px solid rgba(238,238,238,1);
  margin-bottom: 20rpx;
}
.road_list{
  width: 630rpx;
  height: 156rpx;
  border-bottom: 1px solid rgba(238,238,238,1);
  margin-left: 30rpx;
  margin-top: 30rpx;
  position: relative;
}
.list_img{
  width: 116rpx;
  height: 116rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.road_word{
  display: inline-block;
  width: 460rpx;
  height: 116rpx;
  margin-left: 136rpx;
}
.to_place{
  height: 48rpx;
  opacity: 1;
  font-size: 34rpx;
  font-family: PingFang;
  color: rgba(74,74,74,1);
  line-height: 30rpx;
}

.to_place text{
  display: inline-block;
  max-width:45%;
  overflow: hidden;
  font-size: 32rpx;
  height: 48rpx;
  line-height: 48rpx;
    text-overflow:ellipsis;
    white-space:nowrap;
}
.place_xia{
  margin: 0 6rpx;
}
.time{
  /* width: 146rpx; */
  height: 34rpx;
  opacity: 1;
  font-size: 24rpx;
  font-family: PingFang;
  color: rgba(153,153,153,1);
  line-height: 34rpx;
  letter-spacing: 0px;
  padding-left: 32rpx;
  position: relative;
}
.time image{
  width:  20rpx;
  height: 20rpx;
  position: absolute;
  left: 0;
  top: 7rpx;
}
.weight{
  width: 146rpx;
  height: 34rpx;
  opacity: 1;
  font-size: 24rpx;
  font-family: PingFang;
  color: rgba(153,153,153,1);
  line-height: 34rpx;
  letter-spacing: 0px;
  padding-left: 32rpx;
  position: relative;
}
.weight image{
  width:  20rpx;
  height: 20rpx;
  position: absolute;
  left: 0;
  top: 7rpx;
}
.loading{
  margin-top: 38rpx;
  text-align: center;
  opacity: 1;
  font-size: 24rpx;
  font-family: PingFang;
  color: rgba(153,153,153,1);
  line-height: 34rpx;
  letter-spacing: 0px;
}
.loading image{
  width: 32rpx;
  height: 32rpx;
  vertical-align: middle;
}
.right{
  position: absolute;
  width: 24rpx;
  height: 28rpx;
  right: 10rpx;
  top: 60rpx;
}



