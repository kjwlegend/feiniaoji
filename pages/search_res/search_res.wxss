/* pages/release/release.wxss */
page{
  background: rgba(248,248,248,1);
}
.header_back {
  width: 750rpx;
  height: 128rpx;
  opacity: 1;
  background: rgba(41, 135, 246, 1);
  margin-bottom: 82rpx;
  position: absolute;
  top: 0;
  left: 0;
}

.header_content {
  width: 690rpx;
  margin: 0 auto;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 4px 6px 1px rgba(217, 225, 231, 0.66);
  position: relative;
  border-radius: 8rpx;
  overflow: hidden;
  padding: 30rpx 0;
  margin-top: 36rpx;
}
.place{
  width: 36%;
  float: left;
  font-size: 24rpx;
  line-height: 40rpx;
  margin:0  20rpx;

}
.place text{
  display: inline-block;
  width: 100%;
text-overflow:ellipsis;
white-space:nowrap;
overflow: hidden;
}
.citys{
  line-height:48rpx;
}
.jiantou{
  width: 100%;
  text-align: center;
  position: absolute;
  top: 20rpx;
}
.jiantou image{
  width: 100rpx;
  height: 16rpx;
  display: inline-block;
}

.search_content{
  width: 690rpx;
  opacity: 1;
  background: rgba(255,255,255,1);
  box-shadow: 0px 4px 6px 1px rgba(217,225,231,0.66);
  margin: 30rpx auto;
  position: relative;
  overflow: hidden;
  padding: 0 0 30rpx 0;
  border-radius: 8rpx;
}

.icon{
  background: rgba(41, 135, 246, 1);
  width: 8rpx;
  height: 386rpx;
  position: absolute;
  left: 0;
  top: 0;
}
.search_title{
  width: 690rpx;
height: 60rpx;
opacity: 1;
background: rgba(239,247,252,1);
  font-size: 24rpx;
  line-height: 60rpx;
  color: rgba(41, 135, 246, 1);
  padding-left:38rpx; 
}

.citys_box{
  position: relative; 
}
.cityTo{
  width: 618rpx;
  height: 160rpx;
  margin: 20rpx auto 0;
  border-bottom: 1rpx solid rgba(238,238,238,1);
}
.city_item{
  width: 37%;
  height: 160rpx;
  opacity: 1;
  font-size: 24rpx;
  font-family: PingFang;
  color: rgba(74,74,74,1);
  line-height: 34rpx;
  letter-spacing: 0px;
  float: left;
}
.city_item text{
  display: inline-block;
  width: 100%;
text-overflow:ellipsis;
white-space:nowrap;
overflow: hidden;
}
.citys{
  height: 50rpx;
  opacity: 1;
  font-size: 36rpx;
  font-family: PingFangSC;
  color: rgba(74,74,74,1);
  line-height: 50rpx;
  letter-spacing: 0px;
  font-weight: bold;
}
.citys_country{
  margin-top: 5rpx;
  margin-bottom: 5rpx;
  color:rgba(153,153,153,1);
}
.fly{
  position: absolute;
  width: 68rpx;
  height: 68rpx;
  top: 30rpx;
  left: 300rpx;
  border-radius: 50%;
  background: rgba(239,247,252,1);
  display: flex;
  justify-content: center;
  align-items: center;
}
.fly image{
  width: 48rpx;
  height: 38rpx;
}

.user{
  height: 88rpx;
  width: 410rpx;
  margin-left: 38rpx;
  position: relative;
  padding-left: 108rpx;
}
.headImg{
  position: absolute;
  width: 88rpx;
  height: 88rpx;
  top: 0;left: 0;
}
.username{
  font-size: 26rpx;
  line-height: 40rpx;
  margin-top: 30rpx;
}
.rank{
  width: 182rpx;
  height: 28rpx;
  opacity: 1;
  background: rgba(254,247,235,1);
  font-size: 18rpx;
  line-height: 28rpx;
  color: rgba(245,166,35,1);
}
.rank image{
  width: 100rpx;
  height: 15rpx;
  /* margin-left: 5rpx; */
}

.foot{
  margin-top: 100rpx;
  text-align: center;
  height: 34rpx;
}
.foot text{
  color: rgba(153,153,153,1);
  font-size: 24rpx;
  line-height: 34rpx;
}
.foot image{
  width: 46rpx;
  height: 34rpx;
  vertical-align: middle;
  display: inline-block;
  margin-top: 5rpx;
  margin-left: 10rpx;
}

.no_search{
  width: 100%;
  text-align: center;
}
.no_search image{
  width: 218rpx;
  height: 76rpx;
  margin-top: 230rpx;
}
.no_search view{
  width: 224rpx;
  height: 44rpx;
  color: rgba(153,153,153,1);
  line-height: 44rpx;
  font-size: 32rpx;
  margin: 138rpx auto 0;
}
.no_search button{
  width: 690rpx;
  height: 96rpx;
  color: white;
  opacity: 1;
  background: rgba(41,135,246,1);
  font-size: 36rpx;
  margin: 148rpx auto 0;
}