<view class='nav'>
  <view class="{{index==0?'nav_item1':'nav_item'}}" bindtap='choose' data-index='0'>待出发</view>
  <view class="{{index==1?'nav_item1':'nav_item'}}" bindtap='choose' data-index='1'>进行中</view>
