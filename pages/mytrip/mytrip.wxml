<!-- 待出发 -->
<view class='list_box' wx:if="{{index==0}}">
  
  <!-- 行程单位 -->
  <view class='list'>
    <!-- 行程编号 -->
    <view class='list_head'>
      <text style='display:block'>行程编号：123d9837439743</text>
      <text class='wait'>待出发</text>
      <text>剩余重量：</text>
      <text style='font-weight:bold;'>5/26</text>
      <text style='margin-left:200rpx;'>当前收益：</text>
      <text style='color:red;'>￥120</text>
    </view>

    <view class='cityTo'>
      <!-- 城市始发地 -->
      <view class='city_box'>
        <view class='city_item'>
          <text class='citys'>莫斯科</text>
          <view class='citys_country'>俄罗斯</view>
          <text>2018-12-31</text>
        </view>
        <image src='/images/jiantou.png' class='jiantou'></image>
        <view class='city_item' style='margin-left:315rpx;'>
          <text class='citys'>莫斯科</text>
          <view class='citys_country'>俄罗斯</view>
          <text>2018-12-31</text>
        </view>
      </view>
    </view>
    <!-- 查看详情 -->
    <button class='see'>查看详情</button>
  </view>
  <!-- 关联订单 -->
  <view class='relation'>
    <view class='icon'></view>
    <view class='order_title'>关联订单</view>
    <!-- 关联订单单位 -->
    <view class='order_item'>
      <image src='/images/find_on.png' class='headImg'></image>
      <view class='danhao'>单号: 28738248367</view>
      <view class='danhao'>金额：￥100</view>
      <view class='wait_sure'>待确认 <image src='/images/right_go.png'></image></view>
    </view>
    <view class='order_item'>
      <image src='/images/find_on.png' class='headImg'></image>
