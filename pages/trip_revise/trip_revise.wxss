/* pages/release/release.wxss */
page{
  background: rgba(248,248,248,1);
}
.icon {
  width: 1em;
  height: 1em;
  vertical-align: -0.15em;
  fill: currentColor;
  overflow: hidden;
}

.header_back {
  width: 750rpx;
  height: 176rpx;
  opacity: 1;
  background: rgba(41, 135, 246, 1);
}

.header_content {
  width: 690rpx;
  height: 324rpx;
