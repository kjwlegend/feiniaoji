*{margin:0;padding:0;}
body,button,input,select,textarea{font-size:18px;font-family:"微软雅黑"; color: #000;}/*雅黑：\5FAE\8F6F\96C5\9ED1  Verdana, Helvetica, sans-serif*/
h1,h2,h3,h4,h5,h6{/*font-size:100%;*/font-family: "微软雅黑";margin:0;font-weight: normal;}
address,cite,dfn,em,var,i{font-style:normal;}
code,kbd,pre,samp{font-family:courier new,courier,monospace;word-wrap: break-word; white-space: normal;}
small{font-size:12px;}
ul,ol{list-style:none;}
a:link,a:visited{color:-#555;text-decoration:none;outline: none; cursor:pointer;}
/*移动端*/
header,article {font-family:"黑体";color:#333333;/*font-size:24px;*/}

a:hover{color:#000000;text-decoration: none;}
sup{vertical-align:text-top;}
sub{vertical-align:text-bottom;}
legend{color:#555;}
b,i, span i{font-weight:normal;}
fieldset,img{border:0;}
input[type="text"],input[type="password"]{padding:5px;font-size:16px}
button,input,select,textarea{font-size:100%;outline:none;}
label span,label,input[type="button"]{cursor: pointer;}
td span{cursor: pointer;}
table{border-collapse:collapse;border-spacing:0;}
a{display:block}
.show-row{margin:0 -5px 0 -5px;}
p{margin:0;}
p a{color:#3e3e3e}
.content{padding:4% 0;}
.mg-ov{width:1200px;padding:3% 15px;}
.mg,.nav_mg{ width:1200px; margin:0 auto;}
.mg .mg_top{width:1200px; margin:0 auto;height:48px;}
.footer .left a{color: #FFF;}
.vf{overflow: hidden;}
.n-box{padding:3%;}
.ov{ overflow:hidden; clear:both;}
.left{ float:left; display:inline;}
ul{margin:0;}
.right{ float:right; display:inline;}
.fl{clear:left;}
li{float:left;}
.cl{clear:both;}













