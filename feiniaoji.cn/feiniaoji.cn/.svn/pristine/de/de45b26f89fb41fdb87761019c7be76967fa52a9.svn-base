/*******banner、轮播*********/
.banner .carousel-indicators li{float:none;border:0;background:#FFFFFF;height:24px;width:24px;}
.banner{position: relative;overflow: hidden;height:600px;}
.banner ul li{position:relative;width:100%;height:600px;}
.banner ul{height:600px;position: relative;overflow: hidden;}
.banner a{position: absolute;height:110px;width:42px;display: block;z-index: 2;top:50%;margin-top:-55px;}
.banner>.prev{background:url(../images/index/prev.png) no-repeat ;left:25px;}
.banner>.next{background:url(../images/index/next.png) no-repeat ;right:25px;}

.banner ul li>img{width:100%;height:600px;position: absolute;left:50%;margin-left:-50%;display: block;}
.banner ol .active{background:#ff0000}
.carousel-control.left,.carousel-control.right{background-image: none;}



